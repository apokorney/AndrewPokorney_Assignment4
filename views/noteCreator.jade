extends layout

block content

    .container
        .row
            section.col-s-15.col-xs-offset-1.col-md-6.col-md-offset-3
                h1.text-center noteCreator
                form
                    .form-group
                        input.form-control(type='text', placeholder='Your Note', required='', autofocus='')
                    .form-group
                        textarea.form-control(rows='20', placeholder='Type Here', required='')
                    button.btn.btn-primary(type='button', data-toggle='modal', data-target='#save') Save

                    #save.modal.fade
                        .modal-dialog
                            .modal-content
                                .modal-header
                                    button.close(type='button', data-dismiss='modal') ×
                                    h4.modal-title Note is Saved
                                .modal-body
                                    p Saved
                                .modal-footer
                                    button.btn.btn-default(type='button', data-dismiss='modal') Exit

                    button.btn.btn-danger(type='button', data-toggle='modal', data-target='#delete') Delete

                    #delete.modal.fade
                        .modal-dialog
                            .modal-content
                                .modal-header
                                    button.close(type='button', data-dismiss='modal') ×
                                    h4.modal-title Note is Deleted
                                .modal-body
                                    p Note is Deleted
                                .modal-footer
                                    button.btn.btn-default(type='button', data-dismiss='modal') Exit
